<%- include("partials/header") -%>
<div class="container">
  <h1>Compose</h1>
  <form id="compose-form" action="/compose" method="POST">
    <div class="form-group">
      <label for="composeTitle">Title</label>
      <input class="form-control" type="text" name="postTitle" />
    </div>
    <div class="form-group">
      <label for="composeText">Post</label>
      <textarea form="compose-form" class="form-control" name="postBody" rows="3" spellcheck="true"
        placeholder="What happened today..." onfocus="this.placeholder = ''"
        onblur="this.placeholder = 'What happened today...'"></textarea>
    </div>
    <button type="submit" name="publish" class="btn btn-primary">
      Publish
    </button>
  </form>
</div>
<%- include("partials/footer") -%>